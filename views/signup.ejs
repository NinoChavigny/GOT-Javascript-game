<%-include('header')-%>



<div class="text-center center-div" id="signup">
    <div class="container w-25 border border-0 py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Sign up</h2>
        </div> 
        <form action="/route/signup" method="POST">
            <div class="form-group">
                <small class="form-text text-muted text-left">Enter your mail address</address></small>
                <input type="email" class="form-control" placeholder="email" name="email">
                
            </div>
            <div class="form-group mt-2">
                <small class="form-text text-muted text-left">Enter your password</address></small>
                <input type="password" class="form-control" placeholder="password" name="password">
                
            </div>
            <div class="form-group mt-2">
                <small class="form-text text-muted text-left">Confirm your password</address></small>
                <input type="password" class="form-control" placeholder="password" name="password_confirmation">
                
            </div>
            <button type="submit" class="btn btn-primary rounded-pill">Submit</button>
        </form>
        <div class="text-center center-div mt-5" id="login">
            <a href="/">Already got an account ? Sign in</a>
        </div>

    </div>
</div>






















